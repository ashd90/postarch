/* ================= GLOBAL ================= */

* {
  border: none;
  border-radius: 10px;
  font-family: "JetBrainsMono Nerd Font", monospace;
  font-size: 10px;
  min-height: 0;
}

window#waybar {
  background: linear-gradient(90deg, #020617, #0f172a);
  padding: 1px 6px;
  border-radius: 16px;
 /* box-shadow: 0 0 16px rgba(0,0,0,0.7);*/
}

/* ================= WORKSPACES (NUMBERS ONLY + ANIMATED GLOW) ================= */

#workspaces {
  padding: 1px;
}

/* ================= WORKSPACES ‚Äî PRO ANIMATION PACK (GTK SAFE) ================= */

/* ================= WORKSPACES ‚Äî ULTRA PRO GTK SAFE PACK ================= */

#workspaces button {
  font-size: 11px;
  font-weight: 600;
  color: #e5e7eb;
  background: rgba(255,255,255,0.10);
  border-radius: 8px;
  padding: 2px 6px;
  margin: 1px;
  transition: background 0.25s ease, box-shadow 0.25s ease;
}

/* ===== EMPTY ‚Äî SOFT FADE + THIN UNDERLINE ===== */
#workspaces button.empty {
  background: rgba(255,255,255,0.05);
  color: #9ca3af;
  border-bottom: 1px solid rgba(255,255,255,0.2);
  animation: wsEmptyFade 2.5s ease-in-out infinite alternate;
}

@keyframes wsEmptyFade {
  from { background: rgba(255,255,255,0.04); }
  to   { background: rgba(255,255,255,0.10); }
}

/* ===== ACTIVE ‚Äî GRADIENT SHIFT + BOLD POP ===== */
#workspaces button.active {
  background-size: 200% 200%;
  background-image: linear-gradient(135deg, #22d3ee, #38bdf8, #0ea5e9);
  color: #020617;
  font-weight: 900;
  letter-spacing: 0.4px;
  border-bottom: 3px solid #38bdf8;
  animation: wsGradientShift 2s ease infinite, wsWave 0.35s ease-out;
}

@keyframes wsGradientShift {
  0%   { background-position: 0% 50%; }
  50%  { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

/* Wave glow */
@keyframes wsWave {
  0% {
    box-shadow:
      -8px 0 0 rgba(56,189,248,0.0),
       0 0 0 rgba(56,189,248,0.0),
       8px 0 0 rgba(56,189,248,0.0);
  }
  60% {
    box-shadow:
      -8px 0 10px rgba(56,189,248,0.6),
       0 0 14px rgba(56,189,248,1),
       8px 0 10px rgba(56,189,248,0.6);
  }
  100% {
    box-shadow:
      -8px 0 0 rgba(56,189,248,0.0),
       0 0 0 rgba(56,189,248,0.0),
       8px 0 0 rgba(56,189,248,0.0);
  }
}

/* ===== OCCUPIED BUT INACTIVE ‚Äî THICK UNDERLINE ===== */
#workspaces button:not(.empty):not(.active) {
  background: linear-gradient(135deg, #facc15, #fb923c);
  color: #020617;
  border-bottom: 3px solid #fb923c;
}

/* ===== FULLSCREEN ===== */
#workspaces button.fullscreen {
  background: linear-gradient(135deg, #8b5cf6, #a78bfa);
  color: #020617;
  font-weight: bold;
}

/* ===== URGENT ‚Äî GTK SAFE SHAKE ===== */
#workspaces button.urgent {
  background: linear-gradient(135deg, #ef4444, #fb7185);
  color: #020617;
  font-weight: bold;
  animation: wsUrgentShake 0.35s ease infinite;
}

/* GTK-safe shake using margin */
@keyframes wsUrgentShake {
  0%   { margin-left: 1px; }
  25%  { margin-left: -1px; }
  50%  { margin-left: 1px; }
  75%  { margin-left: -1px; }
  100% { margin-left: 1px; }
}

/* ================= DIFFERENT PULSE DURATION PER WORKSPACE ================= */

#workspaces button:nth-child(1):not(.active):not(.empty) { animation: wsPulse1 0.6s ease-out; }
#workspaces button:nth-child(2):not(.active):not(.empty) { animation: wsPulse2 0.8s ease-out; }
#workspaces button:nth-child(3):not(.active):not(.empty) { animation: wsPulse3 1.0s ease-out; }
#workspaces button:nth-child(4):not(.active):not(.empty) { animation: wsPulse4 0.6s ease-out; }
#workspaces button:nth-child(5):not(.active):not(.empty) { animation: wsPulse5 0.8s ease-out; }
#workspaces button:nth-child(6):not(.active):not(.empty) { animation: wsPulse6 1.0s ease-out; }
#workspaces button:nth-child(7):not(.active):not(.empty) { animation: wsPulse7 0.6s ease-out; }
#workspaces button:nth-child(8):not(.active):not(.empty) { animation: wsPulse8 0.8s ease-out; }
#workspaces button:nth-child(9):not(.active):not(.empty) { animation: wsPulse9 1.0s ease-out; }

@keyframes wsPulse1 { 50% { box-shadow: 0 0 10px #38bdf8; } }
@keyframes wsPulse2 { 50% { box-shadow: 0 0 10px #34d399; } }
@keyframes wsPulse3 { 50% { box-shadow: 0 0 10px #fbbf24; } }
@keyframes wsPulse4 { 50% { box-shadow: 0 0 10px #fb7185; } }
@keyframes wsPulse5 { 50% { box-shadow: 0 0 10px #a78bfa; } }
@keyframes wsPulse6 { 50% { box-shadow: 0 0 10px #38bdf8; } }
@keyframes wsPulse7 { 50% { box-shadow: 0 0 10px #34d399; } }
@keyframes wsPulse8 { 50% { box-shadow: 0 0 10px #fbbf24; } }
@keyframes wsPulse9 { 50% { box-shadow: 0 0 10px #fb7185; } }

/* ================= PER-WORKSPACE COLOR IDENTITY ================= */

#workspaces button:nth-child(1) { border-color: #38bdf8; }
#workspaces button:nth-child(2) { border-color: #34d399; }
#workspaces button:nth-child(3) { border-color: #fbbf24; }
#workspaces button:nth-child(4) { border-color: #fb7185; }
#workspaces button:nth-child(5) { border-color: #a78bfa; }
#workspaces button:nth-child(6) { border-color: #38bdf8; }
#workspaces button:nth-child(7) { border-color: #34d399; }
#workspaces button:nth-child(8) { border-color: #fbbf24; }
#workspaces button:nth-child(9) { border-color: #fb7185; }


/* ================= WINDOW ================= */

