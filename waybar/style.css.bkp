  background: linear-gradient(135deg, #fbbf24, #f97316); /* Amber ‚Üí Orange */
  color: #2a0e00;
}

/* Critical usage */
#disk.critical {
  background: linear-gradient(135deg, #ef4444, #dc2626);
  color: #ffffff;
  animation: diskPulse 1s ease-in-out infinite;
}

@keyframes diskPulse {
  0%   { box-shadow: 0 0 4px rgba(239,68,68,0.5); }
  50%  { box-shadow: 0 0 14px rgba(239,68,68,1); }
  100% { box-shadow: 0 0 4px rgba(239,68,68,0.5); }
}
@keyframes diskShimmer {
  0%   { box-shadow: 0 0 0px rgba(20,184,166,0.0); }
  50%  { box-shadow: 0 0 12px rgba(20,184,166,0.6); }
  100% { box-shadow: 0 0 0px rgba(20,184,166,0.0); }
}
/* ================= CLOCK GLOW ON NOTIFICATION ================= */

/* ================= CLOCK (COLORFUL, NON-GREY) ================= */
/* ================= CLOCK PER-MINUTE COLOR SHIFT ================= */

#clock {
  padding: 4px 12px;
  border-radius: 8px;
  background: linear-gradient(135deg, #7c3aed, #4f46e5);
  color: #f8fafc;
  font-weight: 800;
  animation: clockDrift 60s linear infinite;
}

/* Notification glow still works */
#clock.urgent {
  background: linear-gradient(135deg, #c084fc, #8b5cf6);
  color: #020617;
  animation: clockGlow 1s ease-in-out infinite;
}

