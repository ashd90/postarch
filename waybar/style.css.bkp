  color: #020617;
  padding: 3px 12px;
  font-size: 11px;
  font-weight: bold;
 /* box-shadow: 0 0 14px #c084fc;*/
  margin: 1px 2px;
}

/* ================= CPU ================= */


/* ================= MEMORY ================= */

#memory {
  background: linear-gradient(135deg, #facc15, #fde047);
  color: #020617;
  padding: 3px 6px;
  margin: 1px 2px;
  font-weight: bold;

}

/* ================= STORAGE ================= */

#disk {
  background: linear-gradient(135deg, #f97316, #fb923c);
  color: #020617;
  font-size: 11px;     /* Slightly bigger than global */
  padding: 2px 7px;  /* Wider for long text */
  letter-spacing: 0.3px;
  font-weight: bold;

}

/* Disk warning animation */
#disk.warning {
  background: linear-gradient(135deg, #facc15, #fde047);
  box-shadow: 0 0 10px #fde047;
  animation: diskPulse 1.6s infinite alternate;
}

#disk.critical {
  background: linear-gradient(135deg, #ef4444, #fb7185);
  box-shadow:
    0 0 12px #ef4444,
    0 0 22px rgba(239,68,68,0.9);
  animation: diskPulseCritical 1s infinite alternate;
}

/* ================= NETWORK ================= */
/* ================= NETWORK (HIGH-CONTRAST AMBER ‚Üí COPPER ‚Üí RED) ================= */

/* Normal connected */
#network {
  padding: 4px 12px;
  border-radius: 8px;
  background: linear-gradient(135deg, #f59e0b, #92400e); /* Brighter Amber ‚Üí Deep Copper */
  color: #f8fafc;   /* ‚úÖ Near-white for maximum readability */
  font-weight: 900;
}

/* Heavy activity */
#network.warning {
  background: linear-gradient(135deg, #fb923c, #ea580c); /* Bright Orange */
  color: #f8fafc;
}

/* Disconnected */
#network.disconnected {
  background: linear-gradient(135deg, #7f1d1d, #450a0a); /* Dark red */
  color: #fecaca;
}


/* ================= AUDIO ================= */

#pulseaudio {
  background: linear-gradient(135deg, #c084fc, #e879f9);
  color: #020617;
  padding: 3px 6px;
  margin: 1px 2px;
  font-weight: bold;
}

#pulseaudio.muted {
  background: linear-gradient(135deg, #64748b, #475569);
  color: #e5e7eb;
}

/* ================= TRAY ================= */

#tray {
  background: linear-gradient(135deg, rgba(255,255,255,0.2), rgba(255,255,255,0.05));
  padding: 3px 6px;
  margin: 1px 2px;
}

/* ================= DISK ANIMATIONS ================= */

@keyframes diskPulse {
  from { box-shadow: 0 0 8px #fde047; }
  to   { box-shadow: 0 0 16px #fde047; }
}

@keyframes diskPulseCritical {
  from { box-shadow: 0 0 10px #ef4444; }
  to   { box-shadow: 0 0 24px #ef4444; }
}

