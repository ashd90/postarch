  0%   { box-shadow: 0 0 4px rgba(124,58,237,0.3); }
  50%  { box-shadow: 0 0 10px rgba(79,70,229,0.7); }
  100% { box-shadow: 0 0 4px rgba(124,58,237,0.3); }
}

/* ================= RAM PRESSURE COLOR RAMP ================= */
/* ================= RAM PRESSURE (PURPLE ‚Üí PINK ‚Üí RED) ================= */

#memory {
  padding: 4px 12px;
  border-radius: 8px;
  background: linear-gradient(135deg, #a855f7, #ec4899); /* Purple ‚Üí Pink */
  color: #020617;
  font-weight: 700;
}

/* High RAM usage */
#memory.warning {
  background: linear-gradient(135deg, #fbbf24, #f97316); /* Yellow ‚Üí Orange */
  color: #2a0e00;
}

/* Critical RAM usage */
#memory.critical {
  background: linear-gradient(135deg, #ef4444, #b91c1c); /* Red */
  color: #ffffff;
  animation: ramPulse 1s ease-in-out infinite;
}

@keyframes ramPulse {
  0%   { box-shadow: 0 0 4px rgba(239,68,68,0.6); }
  50%  { box-shadow: 0 0 14px rgba(239,68,68,1); }
  100% { box-shadow: 0 0 4px rgba(239,68,68,0.6); }
}
/* ================= PREMIUM MULTI-COLOR TOOLTIPS (GTK SAFE) ================= */

/* ---------- Base Tooltip (Fallback) ---------- */
tooltip {
  background: linear-gradient(135deg, #1e293b, #312e81);
  color: #f8fafc;

  border-radius: 14px;

  padding-top: 14px;
  padding-bottom: 14px;
  padding-left: 18px;
  padding-right: 18px;

  font-size: 14px;
  font-weight: 600;
  letter-spacing: 0.4px;

  border: 1px solid rgba(248, 250, 252, 0.12);
}

tooltip label {
  color: #f8fafc;
  font-size: 14px;
  font-weight: 600;

  margin-top: 6px;
  margin-bottom: 6px;
}

/* ---------- CPU Tooltip (Green Theme) ---------- */
#cpu tooltip {
  background: linear-gradient(135deg, #052e16, #14532d);
  color: #dcfce7;
}

/* ---------- RAM Tooltip (Purple ‚Üí Pink) ---------- */
#memory tooltip {
  background: linear-gradient(135deg, #3b0764, #831843);
  color: #fdf4ff;
}

/* ---------- DISK Tooltip (Gold ‚Üí Teal) ---------- */
#disk tooltip {
  background: linear-gradient(135deg, #78350f, #134e4a);
  color: #fefce8;
}

/* ---------- NETWORK Tooltip (Amber ‚Üí Red) ---------- */
#network tooltip {
  background: linear-gradient(135deg, #78350f, #7f1d1d);
  color: #fff7ed;
}

/* ---------- CLOCK Tooltip (Purple ‚Üí Indigo) ---------- */
#clock tooltip {
  background: linear-gradient(135deg, #1e1b4b, #312e81);
  color: #eef2ff;
}

/* ---------- ICON vs NUMBER COLOR SEPARATION ---------- */
/* Applies where icons and numbers share the same label */
#cpu tooltip label,
#memory tooltip label,
#disk tooltip label,
#network tooltip label {
  color: #e5e7eb;
}

/* ---------- CRITICAL TOOLTIP FLASHING ---------- */

#cpu.critical tooltip,
#memory.critical tooltip,
#disk.critical tooltip {
  background: linear-gradient(135deg, #7f1d1d, #450a0a);
  color: #fecaca;

  border: 1px solid rgba(254, 202, 202, 0.35);

  animation: tooltipCriticalPulse 1.2s ease-in-out infinite;
}

@keyframes tooltipCriticalPulse {
  0%   { border-radius: 14px; }
  50%  { border-radius: 20px; }
  100% { border-radius: 14px; }
}
