}
/* ================= WORKSPACE INTERACTION ENHANCEMENTS (GTK SAFE) ================= */

/* ===== HOVER GLOW ===== */
#workspaces button:hover {
  box-shadow: 0 0 10px rgba(56,189,248,0.8);
  background: linear-gradient(135deg, #38bdf8, #0ea5e9);
  color: #020617;
}

/* ===== SCROLL SWITCH FEEDBACK (ACTIVE FLASH) ===== */
/* Waybar toggles .active on scroll ‚Äî this reinforces visual feedback */
#workspaces button.active {
  animation: wsScrollFlash 0.2s ease-out;
}

@keyframes wsScrollFlash {
  0%   { box-shadow: 0 0 0px rgba(56,189,248,0.0); }
  50%  { box-shadow: 0 0 14px rgba(56,189,248,1); }
  100% { box-shadow: 0 0 0px rgba(56,189,248,0.0); }
}

/* ===== NOTIFICATION / ACTIVITY BADGE STYLE (URGENT COUNTER LOOK) ===== */
/* This applies when Waybar marks a workspace as urgent */
#workspaces button.urgent {
  box-shadow:
    0 0 0 2px rgba(239,68,68,1),
    0 0 12px rgba(239,68,68,1);
  background: linear-gradient(135deg, #ef4444, #fb7185);
  color: #020617;
  font-weight: 900;
}

/* Optional: subtle pulse for urgent to simulate badge alert */
#workspaces button.urgent {
  animation: wsUrgentPulse 0.8s ease-in-out infinite;
}

@keyframes wsUrgentPulse {
  0%   { box-shadow: 0 0 6px rgba(239,68,68,0.6); }
  50%  { box-shadow: 0 0 14px rgba(239,68,68,1); }
  100% { box-shadow: 0 0 6px rgba(239,68,68,0.6); }
}
/* ================= CPU HEAT GLOW (GTK SAFE) ================= */
/* ================= COLORFUL CPU GRADIENT ================= */

/* ================= COLORFUL CPU (NON-SKY-BLUE THEME) ================= */

/* Normal CPU ‚Äî Teal ‚Üí Green */
/* ================= CPU BREATHING EFFECT ================= */

#cpu {
  padding: 4px 12px;
  border-radius: 8px;
  background: linear-gradient(135deg, #14b8a6, #22c55e);
  color: #022c22;
  font-weight: 700;
  animation: cpuBreathe 3s ease-in-out infinite;
}

/* Medium load */
#cpu.warning {
  background: linear-gradient(135deg, #fbbf24, #f97316);
  color: #2a0e00;
  animation: cpuBreatheFast 1.8s ease-in-out infinite;
}

/* Heavy load */
#cpu.critical {
  background: linear-gradient(135deg, #ef4444, #db2777);
  color: #ffffff;
  animation: cpuBreatheFast 1s ease-in-out infinite;
}

@keyframes cpuBreathe {
  0%   { box-shadow: 0 0 4px rgba(34,197,94,0.3); }
  50%  { box-shadow: 0 0 12px rgba(34,197,94,0.7); }
  100% { box-shadow: 0 0 4px rgba(34,197,94,0.3); }
}

@keyframes cpuBreatheFast {
  0%   { box-shadow: 0 0 4px rgba(239,68,68,0.4); }
  50%  { box-shadow: 0 0 14px rgba(239,68,68,0.9); }
  100% { box-shadow: 0 0 4px rgba(239,68,68,0.4); }
}

/* ================= TEMPERATURE COLOR RAMP (GTK SAFE) ================= */

#temperature {
  padding: 4px 10px;
  border-radius: 8px;
  background: linear-gradient(135deg, #38bdf8, #0ea5e9); /* ‚ùÑÔ∏è Cool */
  color: #020617;
}

/* Warm */
#temperature.warning {
  background: linear-gradient(135deg, #fde68a, #facc15); /* üå§ Warm */
  color: #020617;
}

/* Hot */
#temperature.critical {
  background: linear-gradient(135deg, #ef4444, #fb7185); /* üî• Hot */
